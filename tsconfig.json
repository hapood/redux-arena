{
  "version": "2.5.3",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src": ["src"]
    },
    "target": "es5",
    "outDir": "tmp",
    "sourceMap": true,
    "declaration": true,
    "module": "esnext",
    "removeComments": false,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "jsx": "react"
  },
  "exclude": ["node_modules", "example"]
}
